        {% for cours in liste_cours %}
            <div class="cours_wrapper">
                <h2>{{ cours.title }}</h2>
                <p>{{ cours.shortDescription }}</p>
                {% for categorie in cours.category %}
                    <span class="categorie">{{ categorie.name }}</span>
                {% endfor %}
                <a href="/college/{{niveau.slug}}/{{cours.slug}}">Voir le cours</a>
            </div>
        {% endfor %}
